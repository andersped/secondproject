<div class="container">
<h1>Bookmarks & Stats</h1>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Bookmark</th>
      <th>URL</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @bookmarks.each do |bookmark| %>
      <td><%= bookmark.name %></td>
      <td><a href="#{bookmark.url}"><%= bookmark.url %></a></td>
      <td><%= link_to "Delete", bookmark_path(bookmark), method: :delete, data:{alert:"are you sure?"} ,class:"btn btn-warning" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-striped table-hover " style="width: 300px">
  <thead>
    <tr>
      <th>Website</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @user.visits.each do |stats| %>
      <td><%= stats.url %></td>
      <td><%= stats.time_amount %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>