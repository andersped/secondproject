<div class="container">
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Bookmark</th>
      <th>URL</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @bookmarks.each do |bookmark| %>
      <td><%= link_to "#{bookmark.name}", bookmark_path(bookmark) %></td>
      <td><a href="#{bookmark.url}"><%= bookmark.url %></a></td>
      <td><%= link_to "Delete", bookmark_path(bookmark), method: :delete, data:{alert:"are you sure?"} ,class:"btn btn-warning" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>